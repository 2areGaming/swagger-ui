<ul class='operations'>
    <li class='{{method}} operation' id='{{parentId}}_{{nickname}}'>
        <div class='content'>
            <div class='heading'>
                <h2 class='operation-title'>{{summary}}</h2>

                <h3>
                    <span class='http_method'>
                        <a href='#!/{{encodedParentId}}/{{nickname}}'>{{method}}</a>
                    </span>
                    <span class='path'>
                        <a href='#!/{{encodedParentId}}/{{nickname}}'
                           class="{{#if deprecated}}deprecated{{/if}}">{{path}}</a>
                    </span>
                </h3>
            </div>
            <a href="javascript:" class="toggle-samples" data-toggle="tooltip" data-placement="left">
                <span class="text">Show samples</span><span class="circle-icon"></span>
            </a>

            {{#if deprecated}}
                <h4>Warning: Deprecated</h4>
            {{/if}}
            {{#if description}}
                <div class="markdown action-summary">{{{description}}}</div>
            {{/if}}
            {{#oauth}}
            <div class="auth">
                <span class="api-ic ic-error"></span>{{/oauth}}
            {{#each oauth}}
                <div id="api_information_panel" style="top: 526px; left: 776px; display: none;">
                    {{#each this}}
                        <div title='{{{this.description}}}'>{{this.scope}}</div>
                    {{/each}}
                </div>
            {{/each}}
            {{#oauth}}</div>{{/oauth}}
            {{#oauth}}
                <div class='access'>
                    <span class="api-ic ic-off" title="click to authenticate"></span>
                </div>
            {{/oauth}}

            <form accept-charset="UTF-8" class="sandbox">
                {{#if parameters}}
                    <h4 data-control class="collapsed" data-toggle="collapse"
                        data-target="#parm-{{parentId}}_{{nickname}}">Parameters</h4>

                    <div data-content class="operation-params collapse" id="parm-{{parentId}}_{{nickname}}">
                    </div>
                {{/if}}
                <!--h4 data-control class="collapsed" data-toggle="collapse" data-target="#test-{{parentId}}_{{nickname}}">
                    Test this endpoint</h4>

                <div class="sandbox_header collapse" data-content id="test-{{parentId}}_{{nickname}}">
                    <input class="submit btn btn-primary" name="commit" type="submit" value="Try"
                           data-target="#get_clients-modal-request"> or <a href="javascript:"
                                                                           class="curl-button"
                                                                           data-target="#get_clients-modal-curl">get
                    curl command</a>
                    <a href="#" class="response_hider hide" style="display: inline;">Hide Response</a>
                    <small class="curl-copy-message hide" style="display:none;">Copied to clipboard</small>
                    <span class="response_throbber hide" style="display: none;"></span>
                </div-->
                <div data-accordion>
                    <h4 data-control="">Test this endpoint</h4>

                    <div data-content style="max-height: 0px; overflow: hidden; -webkit-transition: max-height 300ms ease; transition: max-height 300ms ease;">
                        <div class="sandbox_header">
                            <input class="submit btn btn-primary" name="commit" type="button" value="Try" data-target="#get_clients-modal-request"> or <a href="javascript:;" class="curl-button" data-target="#get_clients-modal-curl">get curl command</a>
                            <a href="#" class="response_hider hide" style="display:none">Hide Response</a>
                            <small class="curl-copy-message hide" style="display:none;">Copied to clipboard</small>
                            <!--span class="response_throbber hide" style="display:none"></span-->
                        </div>
                    </div>
                </div>
                {{#if responseMessages}}
                    <h4 data-control class="collapsed" data-toggle="collapse"
                        data-target="#response-{{parentId}}_{{nickname}}">Response Messages</h4>

                    <div data-content class="responses-wrapper collapse" id="response-{{parentId}}_{{nickname}}">
                        <table class="fullwidth">
                            <tbody class="operation-status">
                        </table>
                    </div>
                {{/if}}
            </form>

        </div>
        <div class="samples">
                <span class="model-signature">
                </span>
        </div>
        <div class="modal" id="modal-{{parentId}}_{{nickname}}">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">Ã—</span></button>
                        <h3 class="modal-title">{{summary}} <span class="http_method"><span
                                class="text">{{method}}</span></span>
                        </h3>
                    </div>
                    <div class="modal-body">
                        <div class='response'>
                            <h5>Request URL</h5>

                            <div class='block request_url'></div>
                            <h5>Response Body</h5>

                            <div class='block response_body'></div>
                            <h5>Response Code</h5>

                            <div class='block response_code'></div>
                            <h5>Response Headers</h5>

                            <div class='block response_headers'></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </li>
</ul>