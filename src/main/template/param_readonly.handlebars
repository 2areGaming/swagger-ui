<div class="param-property hide" data-label="name">{{name}}</div>
<div class="param-property" data-label='{{name}}'>
    <div>
        {{#if isBody}}
            <textarea class='body-textarea form-control' readonly='readonly' name='{{name}}'>{{default}}</textarea>
        {{else}}
            {{#if default}}
                {{default}}
            {{else}}
                (empty)
            {{/if}}
        {{/if}}
        <div class="small-description">
            {{#if type}}
                <code class="code-signature">{{type}}</code>
            {{/if}}
            {{description}}
        </div>
    </div>
</div>
